{
  "manifest_version": 3,
  "name": "Money Mind — Save Instead",
  "version": "0.3.0",
  "description": "Intercept impulse buys at checkout. Save Instead → streaks, goals, badges. Responsible & explainable nudges.",
  "action": {
    "default_popup": "popup.html",
    "default_title": "Save Instead"
  },
  "permissions": ["storage", "activeTab", "scripting"],
  "host_permissions": ["https://*/*", "http://*/*"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [{
    "matches": ["http://*/*", "https://*/*"],
    "js": ["classifier.js", "content.js"],
    "run_at": "document_idle"
  }],
  "options_page": "options.html",
  "web_accessible_resources": [{
    "resources": ["testset.json"],
    "matches": ["<all_urls>"]
  }]
}
