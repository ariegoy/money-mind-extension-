{
  "manifest_version": 3,
  "name": "Money Mind — Save Instead",
  "version": "0.1.0",
  "description": "Intercept impulse buys at checkout. Save Instead → streaks, goals, badges.",
  "action": {
    "default_popup": "popup.html",
    "default_title": "Save Instead"
  },
  "permissions": ["storage", "activeTab", "scripting"],
  "host_permissions": ["https://*/*", "http://*/*"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [{
    "matches": ["http://*/*", "https://*/*"],
    "js": ["classifier.js", "content.js"],
    "run_at": "document_idle"
  }],
  "icons": {
    "16": "icons/16.png",
    "32": "icons/32.png",
    "48": "icons/48.png",
    "128": "icons/128.png"
  },
  "options_page": "options.html"
}
